<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <% unless @task.new_record? %>
    <%= f.check_box :completed %> Completed
  <% end %>
  <%= f.submit %>
<% end %>
<p><%= link_to "Back to list", tasks_path %></p>
